import cv2

# Cargar el clasificador preentrenado para detectar rostros, yo lo consegui a traves de github, y ojo, debe de estar en la misma carpeta donde
# guaradmos el programa
face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_frontalface_default.xml')


cap = cv2.VideoCapture(0) #Este parametro tiene que ser en 0 si o si, solo se cambia si uno tiene mas de una camara de manera externa
# O tenemos una en uso a traves de OBS.


while True:
    ret, frame = cap.read()

    # Convertir la imagen a escala de grises
    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)

    faces = face_cascade.detectMultiScale(gray, 1.3, 5)
    #En el programa pasado tuve que retocar los parametros por que no me lo estaban leyendo, eso depende de si es pc o laptop
    #Ademas de si se usa OBS, se usa una camara externa, etc.
    
    frame = cv2.flip(frame, 1)
    
    for (x, y, w, h) in faces:
        cv2.rectangle(frame, (x, y), (x+w, y+h), (0, 255, 0), 2)
        
    cv2.imshow('Tu cara je je', frame)

    if cv2.waitKey(1) == 27:
        break
    
cap.release()
cv2.destroyAllWindows()